{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure all days",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".",
                "-B build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build all days",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "./build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run current day",
            "type": "shell",
            "command": "./day02",
            "options": {
                "cwd": "${workspaceFolder}/build/day02/Debug"
            }
        },
        {
            "label": "Run current with puzzle",
            "type": "shell",
            "command": "./day02",
            "args": [
                "puzzle.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/day02/Debug"
            }
        },
        {
            "label": "Build and run current",
            "dependsOn": [
                "Configure all days",
                "Build all days",
                "Run current day"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}